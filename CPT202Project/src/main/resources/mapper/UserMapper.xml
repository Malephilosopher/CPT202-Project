<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjtlu.cpt202.cpt202Project.mapper.UserMapper">

    <select id="findUserById" resultType="com.xjtlu.cpt202.cpt202Project.entity.User">
        select * from user where id = #{id};
    </select>

    <select id="getThumbUp" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        select u.blog_id from user_like u where u.user_id = #{id};
    </select>






</mapper>